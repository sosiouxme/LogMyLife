<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
<LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
 >
 
 <TextView
    style="@style/LineLabel"
    android:text="Data Export"
    />
    <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Use this button to export all data from this application to an archive file on the SD card; this file can be imported into another copy of this application."
    />
    <Button
    android:id="@+id/export_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Export data to SD card"
    />    
<TextView
    style="@style/LineLabel"
    android:text="Data Import"
    />
    <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Use this button to overwrite this application's data with an archive file on the SD card that is from a previous export of this application."
    />
    <Button
    android:id="@+id/import_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Import data from SD card"
    />    
<TextView
    style="@style/LineLabel"
    android:text="Result"
    />
    <TextView
    android:id="@+id/result"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="(No action taken yet)"
    />
    
</LinearLayout>
</ScrollView>