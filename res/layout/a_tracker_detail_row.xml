<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/verticalLL"
  android:layout_width="fill_parent"
  android:id="@+id/logRow"
>
  <TextView
    android:text="Time"
    android:id="@+id/logTime"
    android:textAppearance="@style/ListTextAppearance"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
  <TextView
    android:text="Body"
    android:id="@+id/logBody"
    android:textAppearance="@style/SubTextAppearance"
    style="@style/EllipseText"
    android:layout_width="fill_parent"
    android:paddingLeft="5sp"
    android:layout_height="wrap_content" />
</LinearLayout>